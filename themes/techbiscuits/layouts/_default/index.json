{{- $.Scratch.Add "index" slice -}}
{{- range sort (where .Site.RegularPages "Section" "blog") "Date" "desc" -}}
  {{- if not .Draft -}}
    {{- $.Scratch.Add "index" (dict
      "title" .Title
      "summary" .Summary
      "content" .Plain
      "permalink" .Permalink
      "date" (.Date.Format "2006-01-02")
      "tags" .Params.tags
      "readingTime" .ReadingTime
    ) -}}
  {{- end -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}
